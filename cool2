local Photon = {}
Photon.__index = Photon

local Window = {}
Window.__index = Window

function Photon:CreateWindow(options)
    local self = setmetatable({}, Window)

    -- Create ScreenGui
    local gui = Instance.new("ScreenGui")
    gui.Name = options.Name or "PhotonUI"
    gui.Parent = game:GetService("CoreGui")
    gui.ResetOnSpawn = false

    -- Main window frame
    local main = Instance.new("Frame")
    main.Size = UDim2.new(0, 400, 0, 300)
    main.Position = UDim2.new(0.5, -200, 0.5, -150)
    main.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
    main.BorderSizePixel = 0
    main.Active = true
    main.Draggable = true
    main.Parent = gui

    -- Title bar
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 40)
    title.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    title.Text = options.Name or "Photon Window"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 20
    title.TextColor3 = Color3.fromRGB(220, 220, 230)
    title.Parent = main

    -- Close button
    local close = Instance.new("TextButton")
    close.Size = UDim2.new(0, 40, 0, 40)
    close.Position = UDim2.new(1, -40, 0, 0)
    close.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
    close.Text = "âœ•"
    close.Font = Enum.Font.GothamBold
    close.TextSize = 18
    close.TextColor3 = Color3.fromRGB(220, 100, 100)
    close.Parent = main
    close.MouseButton1Click:Connect(function()
        gui:Destroy()
    end)

    -- Store references for future expansion
    self.Gui = gui
    self.Main = main
    self.Title = title

    return self
end

return setmetatable({}, Photon)
